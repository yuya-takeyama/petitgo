{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/gofmt.sh"
          }
        ]
      },
      {
        "matcher": "Write|Edit|MultiEdit",
        "condition": "files_match('**/*.md')",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/prettier.sh"
          }
        ]
      }
    ]
  }
}